<html>
<head>
  <meta charset="UTF-8">
  <title>Device Info Collector</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f0f0f0; }
    h1 { color: #333; }
    pre { background: #fff; padding: 15px; border-radius: 5px; box-shadow: 0 0 5px rgba(0,0,0,0.1); }
  </style>
</head>
<body>
  <h1>Device Info Collector</h1>
  <pre id="output">Collecting info...</pre>

  <!-- Firebase + Device Info -->
  <script type="module">
    // استدعاء مكتبات Firebase
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
    import { getDatabase, ref, set } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-database.js";

    // إعدادات Firebase الخاصة بمشروعك
    const firebaseConfig = {
      apiKey: "AIzaSyA...",
      authDomain: "noor-a80c6.firebaseapp.com",
      databaseURL: "https://noor-a80c6-default-rtdb.firebaseio.com",
      projectId: "noor-a80c6",
      storageBucket: "noor-a80c6.appspot.com",
      messagingSenderId: "402878102793",
      appId: "1:402878102793:web:663a1ba49d",
      measurementId: "G-QR02P4TXYN"
    };

    // تشغيل Firebase
    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    // عنصر العرض على الشاشة
    const output = document.getElementById('output');

    // 1️⃣ جمع المعلومات
    let deviceInfo = {
      userAgent: navigator.userAgent,
      platform: navigator.platform,
      hardwareConcurrency: navigator.hardwareConcurrency,
      deviceMemory: navigator.deviceMemory,
      language: navigator.language,
      time: new Date().toString()
    };

    output.textContent = "📱 Device Info:\n" + JSON.stringify(deviceInfo, null, 2);

    // 2️⃣ إرسالها إلى Firebase Realtime Database
    function sendDeviceInfo(info) {
      set(ref(db, 'devices/' + Date.now()), info);
    }

    sendDeviceInfo(deviceInfo);
  </script>
</body>
</html>
